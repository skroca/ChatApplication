@model Data.DTOModels.UserDTO

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h3>Registrant Form</h3>

    <form method="post" asp-controller="User" asp-action="AddUser">
        <table>
            <tr>
                <td>First Name</td>
                <td><input type="text" asp-for="@Model.FirstName" /></td>
                <span asp-validation-for="@Model.FirstName"></span>
            </tr>
            <tr>
                <td>Last Name</td>
                <td><input type="text" asp-for="@Model.LastName" /></td>
                <span asp-validation-for="@Model.LastName"></span>
            </tr>
            <tr>
                <td>Email</td>
                <td><input type="text" asp-for="@Model.Email" /></td>
                <span asp-validation-for="@Model.Email"></span>
            </tr>
            <tr>
                <td>Password</td>
                <td><input type="password" asp-for="@Model.Password" /></td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>
                    <input class="btn btn-primary" type="submit" value="Submit" />
                </td>
            </tr>
        </table>
    </form>
</body>
</html>
@model ChatApplication.Models.LoginViewModel

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>

    <h3>Login Form</h3>
    <form method="post" asp-controller="Login" asp-action="Login">
        <table>
            <tr>
                <td>Username</td>
                <td><input type="text" asp-for="@Model.UserName" /></td>
            </tr>
            <tr>
                <td>Password</td>
                <td><input type="password" asp-for="@Model.Password" /></td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>
                    <input type="submit" class="btn btn-primary" value="Login" />
                    <a href="~/User" class="btn btn-danger" role="button">Register</a>
                </td>
            </tr>
        </table>
    </form>
</body>
</html>
